<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--设置Toolbar返回按钮的颜色-->
        <item name="colorControlNormal">@color/primary</item>

    </style>



    <style name="AppTheme" parent="@style/BaseAppTheme"/>

    <!--主登陆界面-->
    <string name="reminder_onlyu">你的专属小日历</string>
    <string name="hint_account">手机号/邮箱</string>
    <string name="hint_password">密码</string>
    <string name="hint_login">登录</string>
    <string name="hint_accout_again">请输入用户名</string>
    <string name="hint_register_password">请输入密码</string>
    <string name="hint_register_password_again">请再次确认密码</string>

    <!--toolbar style-->
    <style name="toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>
